<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.housekeeper.ui.PhoneInfoActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#34ddcf"
        app:title="手机信息"
        android:id="@+id/toolbar"
        app:titleTextColor="#ec1919"
        app:subtitle="检测展示手机基本信息"
        app:logo="@drawable/ic_launcher"
        />
    <ProgressBar
        style="@style/tallerBarStyle"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:id="@+id/progressBar"

        android:background="@drawable/juxing"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/toolbar"
        android:layout_marginLeft="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:indeterminate="false"/>

    <!--"?android:attr/progressBarStyleHorizontal"-->
    <ListView
        android:divider="#b49696"
        android:dividerHeight="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_phoneinfo"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/progressBar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="   "
        android:id="@+id/textView2"
        android:layout_marginBottom="17dp"
        android:background="@color/yellow"
        android:layout_alignBottom="@+id/progressBar"
        android:layout_toRightOf="@+id/progressBar"
        android:layout_toEndOf="@+id/progressBar"/>

    <TextView
        android:layout_width="60dp"
        android:layout_height="17dp"
        android:text="百分比"
        android:textSize="12sp"
        android:id="@+id/tv_phoneinfo_bet"
        android:layout_alignParentRight="true"
        android:layout_marginTop="100dp"
        />

    <TextView
        android:layout_width="60dp"
        android:layout_height="17dp"
        android:id="@+id/tv_phoneinfo_tem"
        android:text="摄氏度"
        android:textSize="12sp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="120dp"
        />


</RelativeLayout>
